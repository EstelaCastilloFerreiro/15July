{
    "name": "Trucco Dashboard",
    "image": "mcr.microsoft.com/devcontainers/python:3.9",
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "postCreateCommand": "pip install -r requirements.txt && python -m spacy download es_core_news_sm",
    "forwardPorts": [8501],
    "portsAttributes": {
        "8501": {
            "label": "Streamlit Dashboard",
            "onAutoForward": "openBrowser"
        }
    }
} 